# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# Replace with your actual MongoDB connection string
# Format: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://username:password@localhost:27017/barangay-system

# Security
# Replace with a strong secret key (minimum 32 characters)
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_KEY
# Replace with a strong admin registration code
ADMIN_REGISTRATION_CODE=REPLACE_WITH_STRONG_CODE

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=REPLACE_WITH_STRONG_SESSION_SECRET
SESSION_EXPIRY=86400000 # 24 hours in milliseconds

# Note: Replace all placeholder values with actual secure values in production
# Generate strong secrets using a secure generator
# Never commit the actual .env file to version control 